{% extends "layout.html.twig" %}

{% block content %}
    <main class="container">
        <div class="row">
            <h1 class="text-center m-3">Liste des super produits !</h1>
        </div>

        <table class="table">
            <thead>
                <tr>
                    <th>Nom</th>
                    <th>Prix</th>
                </tr>
            </thead>
            <tbody>

                {% for product in products %}
                    <tr>
                        <td>{{ product.name }}</td>
                        <td>{{ product.price }}</td>
                    </tr>
                {% endfor %}

            </tbody>
        </table>

    </main>

{% endblock %}